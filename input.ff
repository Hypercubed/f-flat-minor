  /* common definitions */

  --: 1 - ;
  not: 0 = ;
  rot: &swap dip swap ;
  choose: &swap ? drop ;
  ifte: rot choose call ;

  /* factorial */

  fact_t: drop 1 ;
  fact_f: dup -- fact * ;
  fact: dup &fact_t &fact_f ifte ;

  /* string printing */
  
  print_f: putc print ;
  print: dup &drop &print_f ifte ;
  println: print 10 putc ;

  0 32 'Factorial print
  0 '100 println

  100 fact .