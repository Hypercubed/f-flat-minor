/* common definitions */

--: 1 - ;
rot: q< swap q> swap ;
choose: 0 = &swap ? drop ;
ifte: rot choose eval ;

/* factorial */

fact_t: dup -- fact * ;
fact_f: drop 1 ;
fact: dup &fact_t &fact_f ifte ;

/* string printing */

print_t: putc print ;
print: dup &print_t &drop ifte ;
println: print 10 putc ;

0 32 'Factorial print
0 '100: println

