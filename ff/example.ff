/* common definitions */

--: 1 - ;
rot: swap q< swap q> swap ;
choose: rot &swap ? drop ;
branch: choose eval ;

/* factorial */

fact_t: dup -- fact * ;
fact_f: drop 1 ;
fact: dup &fact_t &fact_f branch ;

/* string printing */

print_t: putc print ;
print: dup &print_t &drop branch ;
println: print 10 putc ;

