/* common definitions */

--: 1 - ;
rot: q< swap q> swap ;
choose: &swap ? drop ;
ifte: rot choose eval ;

/* factorial */

fact: dup [ drop 1 ] [ dup -- fact * ] ifte ;

/* string printing */

print: dup &drop [ putc print ] ifte ;
println: print 10 putc ;

0 32 'Factorial print
0 '100: println

100 fact .

