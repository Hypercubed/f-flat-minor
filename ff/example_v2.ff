/* common definitions */

--: 1 - ;
rot: q< swap q> swap ;
choose: 0 = &swap ? drop ;
ifte: rot choose eval ;

/* factorial */

fact: dup [ dup -- fact * ] [ drop 1 ] ifte ;

/* string printing */

print: dup [ putc print ] &drop ifte ;
println: print 10 putc ;

